# ===========================================
# Aqu√°rio - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# .env.local is gitignored and safe for secrets

# -------------------------------------------
# App URL
# -------------------------------------------
# The public URL of the app (used for email links)
# In production, set to your domain (e.g., https://aquarioufpb.com)
# Defaults to http://localhost:3000 if not set
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -------------------------------------------
# Backend usage. Disabling it will make it work forntend-only
# -------------------------------------------
NEXT_PUBLIC_USE_BACKEND=true

# -------------------------------------------
# Database
# -------------------------------------------
# PostgreSQL connection string
# For local dev with Docker: postgresql://postgres:password@localhost:5432/aquario
DATABASE_URL="postgresql://postgres:password@localhost:5432/aquario"

# -------------------------------------------
# Authentication
# -------------------------------------------
# JWT secret key (must be at least 32 characters)
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"

# JWT token expiration (e.g., "7d", "24h", "1h")
JWT_EXPIRES_IN="7d"

# Comma-separated list of emails that get MASTER_ADMIN role on registration
MASTER_ADMIN_EMAILS="aquarioufpb@gmail.com"

# -------------------------------------------
# Email (Resend)
# -------------------------------------------
# Resend API key for sending emails (leave empty to disable emails in dev)
RESEND_API_KEY=""

# Email sender address
EMAIL_FROM="noreply@aquarioufpb.com"

# When true, users are auto-verified on registration (skip email verification)
# Useful for local development
EMAIL_MOCK_MODE="true"

# -------------------------------------------
# Data Providers
# -------------------------------------------
# Where to get content from: "local" (git submodules) or "backend" (API routes)
# Use "local" for static content, "backend" when you need DB features
NEXT_PUBLIC_GUIAS_DATA_PROVIDER="backend"
NEXT_PUBLIC_ENTIDADES_DATA_PROVIDER="backend"

# -------------------------------------------
# Analytics (PostHog)
# -------------------------------------------
# PostHog project API key (optional - leave empty to disable)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://us.i.posthog.com"
